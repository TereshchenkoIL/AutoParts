<Window x:Class="AutoParts.View.Register"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoParts.View"
        mc:Ignorable="d"
        Title="Реєстрація" Height="492" Width="334" WindowStartupLocation="CenterScreen"
        Icon="../Images/Parts.png">
    <Grid>
        <Grid Margin="0,0,0,1">
            <Rectangle Height="260" VerticalAlignment="Top">
                <Rectangle.Fill>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF2281D1"/>
                        <GradientStop Color="#FF34268A" Offset="1"/>
                        <GradientStop Color="#FF33288B" Offset="0.5"/>
                    </LinearGradientBrush>
                </Rectangle.Fill>
            </Rectangle>


            <Rectangle Width="280" Height="355" Fill="White" VerticalAlignment="Top" Margin="23,50,23,0" RadiusY="24" RadiusX="24">
                <Rectangle.Effect>
                    <DropShadowEffect Color="#FFBBBBBB" Direction="0" BlurRadius="15" ShadowDepth="1"/>
                </Rectangle.Effect>
            </Rectangle>
            <Grid Width="280" Height="200" VerticalAlignment="Top" >
                <Label Content="Реєстрація" HorizontalAlignment="Center" Height="40"  Margin="72,45,73,115" Width="135" Foreground="#FF5F5E5E" FontSize="24"/>
                <Label Content="UserName" HorizontalAlignment="Left" Height="30" Margin="5,85,0,0" VerticalAlignment="Top" Width="64"/>
                <Label Content="Password" HorizontalAlignment="Left" Height="30" Margin="5,125,0,0" VerticalAlignment="Top" Width="65"/>
                <TextBox x:Name="UserNameBox" HorizontalAlignment="Left" Height="25" Margin="82,85,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="160"/>
                <PasswordBox x:Name="first_pas" HorizontalAlignment="Left" Height="25" Margin="82,130,0,0" VerticalAlignment="Top" Width="160"/>
                <Label Content="Once more" HorizontalAlignment="Left" Height="25" Margin="5,170,0,0" VerticalAlignment="Top" Width="75" />
                <PasswordBox x:Name="second_pas" HorizontalAlignment="Left" Height="25" Margin="82,170,0,0" VerticalAlignment="Top" Width="160"/>
                <Label Content="Email" HorizontalAlignment="Left" Height="25" Margin="5,210,0,-35" VerticalAlignment="Top" Width="55" />
                <TextBox x:Name="Email_Box" HorizontalAlignment="Left" Height="25" Margin="82,210,0,-35" VerticalAlignment="Top" Width="160"/>
                <Label Content="Ім'я" HorizontalAlignment="Left" Height="25" Margin="5,245,0,-70" VerticalAlignment="Top" Width="95" />
                <Label Content="По-батькові" HorizontalAlignment="Left" Height="25" Margin="5,280,0,-105" VerticalAlignment="Top" Width="95" />
                <Label Content="Прізвище" HorizontalAlignment="Left" Height="25" Margin="5,315,0,-140" VerticalAlignment="Top" Width="95" />
                <TextBox x:Name="NameBox" HorizontalAlignment="Left" Height="25" Margin="82,245,0,-70" VerticalAlignment="Top" Width="160"/>
                <TextBox x:Name="SeconNameBox" HorizontalAlignment="Left" Height="25" Margin="82,280,0,-105" VerticalAlignment="Top" Width="160"/>
                <TextBox x:Name="SurnameBox" HorizontalAlignment="Left" Height="25" Margin="82,315,0,-140" VerticalAlignment="Top" Width="160"/>
                <Label Content="Телефон" HorizontalAlignment="Left" Height="25" Margin="5,350,0,-175" VerticalAlignment="Top" Width="95" />
                <TextBox x:Name="PhoneBox" HorizontalAlignment="Left" Height="25" Margin="82,350,0,-175" VerticalAlignment="Top" Width="160"/>
            </Grid>
            <Button Content="Зарегіструватися" HorizontalAlignment="Center" Height="40" Margin="65,405,76,0" VerticalAlignment="Top" Width="185" Background="#FF01AAF9" Foreground="White" FontSize="18" Click= "Register_Click" />
        </Grid>

    </Grid>
</Window>
